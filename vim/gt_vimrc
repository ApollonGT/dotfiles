" Custom part of vimrc {
" ------------------------------------------------------------------- "
" Source the vimrc file after saving it
if has("autocmd")
  autocmd bufwritepost .vimrc source $MYVIMRC
endif

" Set number
set number
" Don't wrap text - code
set nowrap

" Switch buffers without save
set hidden
" Maintain undo history between sessions"
set undofile
set undodir=~/.vim/undodir

" set leader to ,
let mapleader = ","

" Toggle Relative number
nmap <C-n> :set rnu!<CR>
nmap <C-s> :syn sync fromstart<CR>

" List buffers with shortcut Ctrl - B
nmap <C-B> :buffers<CR>:buffer<space>

" No highlight
nmap <leader>/ :noh<CR>

" Show column 81
set colorcolumn=81,110

" Indentation
syntax enable
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" ---- Vim Plugin ---- "
call plug#begin('~/.vim/plugged')

" Declare the list of plugins.
Plug 'kien/ctrlp.vim'
Plug 'tpope/vim-surround'
Plug 'airblade/vim-gitgutter'
Plug 'raimondi/delimitmate'
Plug 'yggdroot/indentline'
Plug 'craigemery/vim-autotag'
Plug 'scrooloose/nerdtree'
Plug 'whatyouhide/vim-gotham'
Plug 'suan/vim-instant-markdown'
Plug 'bronson/vim-trailing-whitespace'
Plug 'klen/python-mode'
Plug 'posva/vim-vue'
Plug 'ironcamel/vim-script-runner'
Plug 'tpope/vim-fugitive'
Plug 'mattn/emmet-vim'
if has('nvim')
    Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
    Plug 'Shougo/deoplete.nvim'
    Plug 'roxma/nvim-yarp'
    Plug 'roxma/vim-hug-neovim-rpc'
endif
Plug 'zchee/deoplete-jedi'

call plug#end()

" enable deoplete
let g:deoplete#sources#jedi#show_docstring = 1
let g:deoplete#enable_at_startup = 1

" Fugitive Shortkeys
map <leader>g :Gblame<CR>

" NerdTree
map <C-e> :NERDTreeToggle<CR>

" Don't auto-fold
set nofoldenable

" ctrlp option
let g:ctrlp_show_hidden = 1
let g:ctrlp_extensions = ['tag']
nnoremap <Leader>p :CtrlPTag<Cr>

" Set theme
colorscheme gotham256

" Teach Vim to Fish
if &shell =~# 'fish$'
    set shell=sh
endif

" --- Custom Functions ---

" Logging - Printing
function! Log()
    if ((&ft=='javascript') || (&ft=='vue'))
        execute "normal iconsole.log();\<esc>h"
        startinsert
    endif

    if (&ft=='python')
        execute "normal iprint()\<esc>"
        startinsert
    endif
endfunction

inoremap <C-l> <esc>:call Log()<CR>

" }
